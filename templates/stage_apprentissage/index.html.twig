{% extends 'base.html.twig' %}

{% block title %}stage & apprentissage{% endblock %}

{% block body %}
<h1>stage & apprentissage</h1>

<a class="btn btn-primary" href="{{ path('app_stage_apprentissage_new') }}">Nouveau stage/apprentissage</a>
    <table class="table">
        <thead>
            <tr>
                <th>Date début</th>
                <th>Date fin</th>
                <th>étudiant</th>
                <th>entreprise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stage_apprentissage in stage_apprentissages %}
            <tr>
                <td>{{ stage_apprentissage.DateDebut ? stage_apprentissage.DateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ stage_apprentissage.DateFin ? stage_apprentissage.DateFin|date('Y-m-d') : '' }}</td>
                <td>{{ stage_apprentissage.IdEtudiant.NomEleve }} {{ stage_apprentissage.IdEtudiant.PrenomEtudiant  }}</td>
                <td>{{ stage_apprentissage.IdEntreprise.NomEntreprise }}</td>
                <td>
                    <a class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2" href="{{ path('app_stage_apprentissage_show', {'id': stage_apprentissage.id}) }}">👀</a>
                    <a class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2" href="{{ path('app_stage_apprentissage_edit', {'id': stage_apprentissage.id}) }}">✏</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun stage ou apprentissage</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
