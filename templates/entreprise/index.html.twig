{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
    <h1>Entreprise</h1>

    <a class="btn btn-primary d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2" href="{{ path('app_entreprise_new') }}">Nouvelle entreprise 🏢</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEntreprise</th>
                <th>Mail</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>SiteWeb</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.NomEntreprise }}</td>
                <td>{{ entreprise.Mail }}</td>
                <td>{{ entreprise.Adresse }}</td>
                <td>{{ entreprise.Ville }}</td>
                <td>{{ entreprise.SiteWeb }}</td>
                <td>
                    <a class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2" href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}">👀</a>
                    <a class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2" href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}">✏</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
