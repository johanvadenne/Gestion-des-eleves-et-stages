{% extends 'base.html.twig' %}

{% block title %}Étudiants{% endblock %}

{% block body %}
<h1>Étudiants</h1>

    <a class="btn btn-primary" href="{{ path('app_etudiant_new') }}">Nouvelle étudiant 👨‍🎓👩‍🎓</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEleve</th>
                <th>PrenomEtudiant</th>
                <th>Etude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.NomEleve }}</td>
                <td>{{ etudiant.PrenomEtudiant }}</td>
                <td>{{ etudiant.IdEtude.NomEtude }}</td>
                <td>
                    <a class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2" href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">👀</a>
                    <a class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2" href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">✏</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
